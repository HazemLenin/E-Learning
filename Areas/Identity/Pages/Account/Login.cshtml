@page
@model LoginModel

@{
    ViewData["Title"] = "تسجيل الدخول";
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label">البريد الإلكتروني</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label">كلمة السر</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            تذكرني
                        </label>
                    </div>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">تسجيل الدخول</button>
                </div>
                <div>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">نسيت كلمة السر؟</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">إنشاء حساب جديد</a>
                    </p>
                    @*<p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>*@
                </div>
            </form>
        </section>
    </div>
    <div class="col-md-6 col-md-offset-2">
        <section>
            <h3>سجل الدخول باستخدام الحسابات الإفتراضية</h3>
            <hr />
            <div class="d-flex">
                <div class="mx-4">
                    البريد الإلكتروني: admin@example.com<br />
                    كلمة السر: Hello%world1<br />
                    <button id="admin-btn" class="btn btn-primary">إستخدام تلك البيانات</button>
                </div>
                <div class="mx-4">
                    البريد الإلكتروني: student@example.com<br />
                    كلمة السر: Hello%world1<br />
                    <button id="student-btn" class="btn btn-primary">إستخدام تلك البيانات</button>
                </div class="mx-4">
                <div>
                    البريد الإلكتروني: teacher@example.com<br />
                    كلمة السر: Hello%world1<br />
                    <button id="teacher-btn" class="btn btn-primary">إستخدام تلك البيانات</button>
                </div>
            </div>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<script defer>
    let adminBtn = document.getElementById("admin-btn");
    let studentBtn = document.getElementById("student-btn");
    let teacherBtn = document.getElementById("teacher-btn");
    let emailField = document.getElementById("Input_Email");
    let passwordField = document.getElementById("Input_Password");

    adminBtn.onclick = () => {
            emailField.value = "admin@example.com";
            passwordField.value = "Hello%world1";
    };

    studentBtn.onclick = () => {
        emailField.value = "student@example.com";
        passwordField.value = "Hello%world1";
    };

    teacherBtn.onclick = () => {
        emailField.value = "teacher@example.com";
        passwordField.value = "Hello%world1";
    };
</script>