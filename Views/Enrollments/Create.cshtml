@model E_Learning.Models.Enrollment

@{
    ViewData["Title"] = "شراء مسار";
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["ErrorMessage"]
    </div>
}

<h1>@ViewData["Title"]</h1>
<hr />
<dl class="row">
    <dt class="col-sm-2">
        العنوان
    </dt>
    <dd class="col-sm-10">
        @ViewBag.Course.Title
    </dd>
    <dt class="col-sm-2">
        السعر
    </dt>
    <dd class="col-sm-10">
        @ViewBag.Course.Price
    </dd>
    <dt class="col-sm-2">
        المعلم
    </dt>
    <dd class="col-sm-10">
        @ViewBag.Course.Teacher.UserName
    </dd>
</dl>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden"  asp-for="Cost" value="@ViewBag.Course.Price" />
            <input type="hidden" asp-for="StudentId" value="@ViewBag.StudentId"></input>
            <input type="hidden" asp-for="CourseId" value="@ViewBag.Course.Id"></input>
            <input type="submit" value="شراء" class="btn btn-primary" />
            <a class="btn btn-primary" asp-controller="Courses" asp-action="Details" asp-route-id="@ViewBag.Course.Id">العودة</a>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
