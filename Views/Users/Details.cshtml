@model ApplicationUser
@using Microsoft.AspNetCore.Identity

@{
    ViewData["Title"] = "تفاصيل المستخدم";
}


@if (TempData["SuccessMessage"] != null) {
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}

<h1>تفاصيل المستخدم</h1>

<form method="post" asp-controller="Users" asp-action="Details" asp-route-id="@Model.Id">
    <table class="table">
        <tbody>
                <tr>
                    <td>اسم المستخدم:</td>
                    <td>@Model.UserName</td>
                </tr>
                <tr>
                    <td>البريد الإلكتروني:</td>
                    <td>@Model.Email</td>
                </tr>
                <tr>
                    <td>المحفظة:</td>
                    <td>@Model.Wallet</td>
                </tr>
                <tr>
                    <td>الدور:</td>
                    <td><select name="rolesIds" class="form-control" asp-items="ViewBag.Roles" multiple></select></td>
                </tr>
        </tbody>
    </table>
    <button type="submit" class="btn btn-primary">حفظ التعديلات</button>
</form>