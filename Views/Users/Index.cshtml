@model List<ApplicationUser>

@{
    ViewData["Title"] = "Index";
}

<h1>Users</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Select((user, index) => new {user, index})) {
            <tr>
                <th>@item.index</th>
                <th><a asp-controller="Users" asp-action="Details" asp-route-id="@item.user.Id">@item.user.Email</a></th>
            </tr>
        }
    </tbody>
</table>