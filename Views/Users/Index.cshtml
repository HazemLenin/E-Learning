@using E_Learning.ViewModels
@model List<UserViewModel>

@{
    ViewData["Title"] = "المستخدمين";
}

<h1>المستخدمين</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>البريد الإلكتروني</th>
            <th>الدور</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Select((user, index) => new {user, index})) {
            <tr>
                <th>@(item.index + 1)</th>
                <th><a asp-controller="Users" asp-action="Details" asp-route-id="@item.user.Id">@item.user.Email</a></th>
                <th>@string.Join(" - ", item.user.Roles)</th>
            </tr>
        }
    </tbody>
</table>