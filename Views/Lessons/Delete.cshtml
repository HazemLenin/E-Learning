@model E_Learning.Models.Lesson

@{
    ViewData["Title"] = "حذف الدرس";
}

<h1>@ViewData["Title"]</h1>

<h3>هل انت متاكد انك تريد حذف المسار؟</h3>
<div>
    <h4>Lesson</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            العنوان
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            الفيديو
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Video)
        </dd>
        <dt class = "col-sm-2">
            الوصف
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="حذف" class="btn btn-danger" />
        <a class="btn btn-primary" asp-controller="Courses" asp-action="Details" asp-route-id="@Model.CourseId">العودة</a>
    </form>
</div>
