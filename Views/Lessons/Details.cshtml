@model E_Learning.Models.Lesson

@{
    ViewData["Title"] = "التفاصيل";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>درس: @Html.DisplayFor(model => model.Title)</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            العنوان
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            الفيديو
        </dt>
        <dd class = "col-sm-10">
            @Html.Raw(Model.Video)
        </dd>
        <dt class = "col-sm-2">
            الوصف
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
</div>
<div>
    @if ((bool)ViewData["IsCourseOwner"]) {
        <a class="btn btn-primary" href="/Courses/@Model.CourseId/Lessons/Edit/@Model.Id">تعديل</a>
        <a class="btn btn-danger" href="/Courses/@Model.CourseId/Lessons/Delete/@Model.Id">حذف</a>
    }
    <a class="btn btn-primary" asp-controller="Courses" asp-action="Details" asp-route-id="@Model.CourseId">العودة</a>
</div>
